{
  "name": "@hashicorp/nextjs-scripts",
  "description": "Next.js plugin for configuring Next for HashiCorp-style websites.",
  "version": "18.2.1",
  "author": "HashiCorp",
  "bin": {
    "next-hashicorp": "bin/next-hashicorp"
  },
  "dependencies": {
    "@bugsnag/js": "7.5.4",
    "@bugsnag/plugin-react": "7.5.4",
    "@hashicorp/react-consent-manager": "4.0.0",
    "@hashicorp/react-enterprise-alert": "5.0.0",
    "@hashicorp/react-tabs": "6.0.0",
    "@hashicorp/remark-plugins": "3.1.1",
    "@mapbox/rehype-prism": "0.5.0",
    "@mdx-js/react": "1.6.22",
    "@next/bundle-analyzer": "10.0.3",
    "@typescript-eslint/eslint-plugin": "4.9.1",
    "@typescript-eslint/parser": "4.9.1",
    "babel-eslint": "10.1.0",
    "chalk": "4.1.0",
    "debug": "4.3.1",
    "ejs": "3.1.5",
    "eslint": "7.15.0",
    "eslint-config-prettier": "7.0.0",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "3.3.0",
    "eslint-plugin-react": "7.21.5",
    "fs-extra": "9.0.1",
    "globby": "11.0.1",
    "imagemin-mozjpeg": "9.0.0",
    "imagemin-optipng": "8.0.0",
    "imagemin-svgo": "8.0.0",
    "inquirer": "7.3.3",
    "lint-staged": "10.5.3",
    "next-optimized-images": "2.6.2",
    "next-transpile-modules": "4.1.0",
    "nprogress": "0.2.0",
    "open": "7.3.0",
    "postcss-flexbugs-fixes": "4.2.1",
    "postcss-normalize": "9.0.0",
    "postcss-preset-env": "6.7.0",
    "readdirp": "3.5.0",
    "rehype-katex": "4.0.0",
    "rehype-parse": "^7.0.1",
    "rehype-stringify": "^8.0.0",
    "remark-math": "4.0.0",
    "remark-parse": "9.0.0",
    "remark-rehype": "8.0.0",
    "rivet-graphql": "0.3.1",
    "signale": "1.4.0",
    "slugify": "1.4.6",
    "stylelint": "13.8.0",
    "stylelint-config-css-modules": "2.2.0",
    "stylelint-config-prettier": "8.0.2",
    "stylelint-config-standard": "20.0.0",
    "stylelint-media-use-custom-media": "2.0.0",
    "stylelint-order": "4.1.0",
    "stylelint-use-nesting": "3.0.0",
    "stylelint-value-no-unknown-custom-properties": "3.0.0",
    "typescript": "4.1.3",
    "unified": "9.2.0",
    "unist-util-visit": "2.0.3"
  },
  "devDependencies": {
    "@auto-it/exec": "^10.16.0",
    "@types/jest": "^26.0.20",
    "@types/nprogress": "^0.2.0",
    "@types/postcss-preset-env": "^6.7.0",
    "@types/react": "^17.0.1",
    "@types/segment-analytics": "0.0.33",
    "@types/webpack": "^4.41.26",
    "auto": "^10.16.0",
    "husky": "4.3.6",
    "jest": "26.6.3",
    "next": "10.0.6",
    "prettier": "2.2.1",
    "release": "6.3.0",
    "ts-jest": "^26.4.4",
    "webpack": "4.44.1"
  },
  "peerDependencies": {
    "@hashicorp/mktg-global-styles": ">= 3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "license": "MPL-2.0",
  "lint-staged": {
    "*.+(js|jsx|ts|tsx)": [
      "./bin/next-hashicorp format",
      "./bin/next-hashicorp lint"
    ],
    "bin/next-hashicorp": [
      "./bin/next-hashicorp format",
      "./bin/next-hashicorp lint"
    ]
  },
  "main": "index.js",
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "scripts": {
    "build": "rm -rf ./dist && tsc -p . && ./scripts/copy-to-dist.sh",
    "release:major": "release major && npm run build && cd dist && npm publish",
    "release:minor": "release minor && npm run build && cd dist && npm publish",
    "release:patch": "release patch && npm run build && cd dist && npm publish",
    "release:pre": "release pre canary && npm run build && cd dist && npm publish --tag=canary",
    "test": "jest",
    "lint": "./bin/next-hashicorp lint"
  },
  "repository": "hashicorp/nextjs-scripts",
  "auto": {
    "author": "hashibot-web <mktg-dev-github-bot@hashicorp.com>",
    "plugins": [
      "./scripts/auto-plugin-publish-directory.js",
      "npm",
      "released"
    ],
    "noVersionPrefix": true
  }
}